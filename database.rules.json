{
  "rules": {
    ".read": false,
    "room": {
      "$rid": {
        "createdBy": {
          ".read": true,
          ".validate": "(!data.parent().exists() && newData.val() === auth.uid) || !newData.parent().exists()"
        },
        "member": {
          ".read": "auth !== null"
        },
        ".write": "auth !== null"
      }
    }
  }
}
